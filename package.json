{
  "name": "@entropix-in/node-escpos-api",
  "version": "0.0.0",
  "type": "module",
  "author": {
    "name": "Rohan Das",
    "email": "rohan@entropix.in"
  },
  "main": "./dist/my-lib.umd.cjs",
  "module": "./dist/my-lib.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/my-lib.js",
      "require": "./dist/my-lib.umd.cjs"
    }
  },
  "scripts": {
    "example:hello": "vite-node example/hello.ts",
    "example:receipt": "vite-node example/receipt.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "pretty": "prettier --write \"src/**/*.ts\"",
    "clean-up": "npm run lint-and-fix & npm run pretty"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.0.4",
    "eslint": "^9.19.0",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.1",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vite-node": "^3.0.4",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^3.0.4"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@node-escpos/console": "^0.0.1",
    "@node-escpos/core": "^0.6.0",
    "@node-escpos/usb-adapter": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "uuid": "^11.0.5",
    "vite-plugin-dts": "^4.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Entropix-in/node-escpos-api.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
